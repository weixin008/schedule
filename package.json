{
  "name": "frontend-shift-scheduler",
  "version": "1.0.0",
  "description": "前端排班系统 - 基于React和本地存储",
  "main": "public/electron.js",
  "scripts": {
    "start": "set PORT=3001 && react-scripts start",
    "build": "react-scripts build",
    "build:web": "react-scripts build",
    "build:pwa": "react-scripts build && npm run build:sw",
    "build:sw": "node scripts/build-sw.js",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "npm start",
    
    "electron": "npx electron .",
    "electron:dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && npx electron .\"",
    "electron:pack": "npm run build && npx electron-builder",
    "electron:dist": "npm run build && npx electron-builder --publish=never",
    
    "build:linux": "npm run build && npx electron-builder --linux",
    "build:linux:deb": "npm run build && npx electron-builder --linux deb",
    "build:linux:rpm": "npm run build && npx electron-builder --linux rpm",
    "build:linux:appimage": "npm run build && npx electron-builder --linux AppImage",
    "build:linux:snap": "npm run build && npx electron-builder --linux snap",
    "build:linux:all": "npm run build && npx electron-builder --linux deb rpm AppImage",
    
    "build:uos": "npm run build && npx electron-builder --linux deb --config.linux.target.arch=x64",
    "build:kylin": "npm run build && npx electron-builder --linux rpm --config.linux.target.arch=x64",
    "build:deepin": "npm run build && npx electron-builder --linux deb --config.linux.target.arch=x64",
    
    "build:android": "npm run build && npx cap copy android && npx cap open android",
    "android": "npx cap open android",
    "ios": "npx cap open ios",
    "capacitor:sync": "npx cap sync",
    "capacitor:build": "npm run build && npx cap sync"
  },
  "keywords": [
    "react",
    "schedule",
    "shift",
    "frontend",
    "antd"
  ],
  "author": "豆子 <douzi@example.com>",
  "license": "MIT",
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "antd": "^5.12.8",
    "dayjs": "^1.11.10",
    "react": "^18.2.0",
    "react-big-calendar": "^1.8.5",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "react-scripts": "5.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.6.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^4.9.5",
    "wait-on": "^7.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "homepage": "./",
  "build": {
    "appId": "com.douzi.paiban",
    "productName": "排班管理系统",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "public/assets/icon.ico"
    },
    "linux": {
      "category": "Office",
      "target": [
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "rpm",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "tar.gz",
          "arch": ["x64", "arm64"]
        }
      ],
      "desktop": {
        "Name": "排班管理系统",
        "Comment": "企业排班管理解决方案",
        "GenericName": "Schedule Management",
        "Keywords": "schedule;shift;management;排班;管理",
        "Categories": "Office;ProjectManagement;",
        "StartupWMClass": "paiban-management"
      },
      "icon": "public/assets/icon.png"
    },
    "deb": {
      "priority": "optional",
      "depends": ["gconf2", "gconf-service", "libnotify4", "libappindicator1", "libxtst6", "libnss3"],
      "recommends": ["lsb-release"],
      "packageCategory": "utils",
      "maintainer": "豆子 <weixin008@users.noreply.github.com>",
      "vendor": "豆子爱分享",
      "synopsis": "企业排班管理系统 - 支持银河麒麟等国产操作系统",
      "description": "功能强大的排班管理系统，支持人员管理、岗位设置、排班规则制定、排班日历等功能。专为中国企业设计，完美支持银河麒麟、统信UOS、深度Deepin等国产操作系统。"
    },
    "rpm": {
      "vendor": "豆子爱分享",
      "license": "MIT",
      "group": "Applications/Office",
      "summary": "企业排班管理系统",
      "description": "功能强大的排班管理系统，支持人员管理、岗位设置、排班规则制定、排班日历等功能。专为中国企业设计，完美支持银河麒麟、统信UOS、深度Deepin等国产操作系统。",
      "requires": ["gconf2", "gtk3", "libnotify", "nss", "libXScrnSaver", "libxss1"],
      "afterInstall": "scripts/rpm-after-install.sh",
      "afterRemove": "scripts/rpm-after-remove.sh"
    },
    "appImage": {
      "license": "MIT",
      "category": "Office",
      "synopsis": "企业排班管理系统 - 银河麒麟版",
      "description": "功能强大的排班管理系统，一键运行，无需安装。支持银河麒麟、统信UOS、深度Deepin等国产操作系统。"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "public/assets/icon.ico",
      "uninstallerIcon": "public/assets/icon.ico",
      "installerHeaderIcon": "public/assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "排班管理系统"
    }
  }
}
