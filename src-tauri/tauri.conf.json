{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "paiban-system",
  "version": "0.1.0",
  "identifier": "com.paiban.system",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:3001",
    "beforeDevCommand": "npm start",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Paiban System",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "longDescription": "Professional shift scheduling system for enterprise staff management and attendance supervision",
    "shortDescription": "Shift Scheduling System",
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0"],
        "section": "Office"
      },
      "rpm": {
        "depends": ["webkit2gtk4.1", "gtk3"],
        "release": "1"
      }
    }
  }
}
